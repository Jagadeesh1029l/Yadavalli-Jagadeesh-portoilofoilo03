/* Responsive Design */

/* Tablets and smaller screens */
@media (max-width: 768px) {
    header h1 {
        font-size: 2.2rem;
    }

    nav {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    nav a {
        display: block;
        margin: 0.5rem 0;
    }

    .project {
        flex: 1 1 calc(50% - 1rem);
    }
}

/* Mobile Devices */
@media (max-width: 480px) {
    header {
        padding: 1rem;
    }

    header h1 {
        font-size: 1.8rem;
    }

    .profile img {
        width: 150px;
        height: 150px;
    }

    section {
        padding: 1rem;
    }

    .project {
        flex: 1 1 100%;
    }
}
