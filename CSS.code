body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #323946;
    color:#fff;
}

header {
    text-align: center;
    padding: 1.5rem;
    background: #0f172a;
    color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}
header h1 {
    margin: 0;
    font-size: 2.8rem;
}

.social-media a {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 4rem;
    height: 4rem;
    background: transparent;
    border: .2rem solid var(--main-color);
    border-radius: 50%;
    font-size: 2rem;
    color: var(--main-color);
    margin: 3rem 1.5rem 3rem 0;
}

nav {
    text-align: center;
    margin: 1rem 0;
}
nav a {
    margin: 0 1rem;
    text-decoration: none;
    color: #f4f1f0;
    font-weight: bold;
    transition: color 0.3s;
}
nav a:hover {
    color: #ffffff;
    text-decoration: underline;
}

.container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 2rem;
}

.profile {
    flex: 1 1 100%;
    max-width: 250px;
    margin: 1rem auto;
    text-align: center;
    background:#1b1f36;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    
}

.profile img {
    border-radius: 50%;
    width: 200px;
    height: 200px;
    object-fit: cover;
    border: 4px solid #090909;
    box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
}

.profile p {
    font-size: 1.2rem;
    margin: 1rem 0;
    color: #ffffff;
}

section {
    flex: 1 1 100%;
    max-width: 600px;
    margin: 1rem auto;
    padding: 1.5rem;
    background: #0f172a;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    text-align:center;
    color:#38bdf8 ;
}

h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color:  #38bdf8;
    border-bottom: 2px solid #ddd;
    padding-bottom: 0.5rem;
}

ul {
    list-style: none;
    padding: 0;
}

ul li {
    margin: 0.5rem 0;
    color: #fff;
}

.skills {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
}

.skills img {
    width: 40px;
    height: 40px;
    margin-right: 0.5rem;
    border-radius: 5px;
}

.projects {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    justify-content: center;
}

.project {
    flex: 1 1 calc(33% - 1rem);
    background: #323946;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    text-align: center;
    padding: 1rem;
    color: white;
    transition: transform 0.3s;
}

.project:hover {
    transform: translateY(-5px);
}

.project img {
    width: 100%;
    border-radius: 12px;
    max-height: 150px;
    object-fit: cover;
    margin-bottom: 0.5rem;
}

.project h3 {
    margin: 0.5rem 0;
}

.project p {
    font-size: 0.95rem;
    color: #ddd;
}
.btn {
    display: inline-block;
    box-shadow: 0 0 1rem #38bdf8;
    color: #38bdf8;
    letter-spacing: 0.1rem;
    font-weight: 600;
    padding: 1rem 2.8rem;
    background:  #0f172a;
    border-radius: 4rem;
    transition: 0.5s;
}

footer {
    text-align: center;
    padding: 1rem;
    background: #0f172a;
    color:  #38bdf8;
    margin-top: 2rem;
}
 
form {
    display: block;
    margin-top: 0em;
    unicode-bidi: isolate;
}

/* Contact Section */
.contact {
  background: #0f172a;
  color: #fff;
  padding: 50px 20px;
  text-align: center;
}

.contact .heading {
  font-size: 2.5rem;
  margin-bottom: 20px;
  color: #38bdf8;
}

.contact .heading span {
  color: #38bdf8;
}

.contact form {
  max-width: 700px;
  margin: 0 auto;
}

.input-box {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-bottom: 20px;
  justify-content: center;
}

.input-box input,
.input-box textarea {
  background: #1e293b;
  color: #fff;
  border: none;
  padding: 15px;
  border-radius: 10px;
  font-size: 1rem;
  width: 100%;
  max-width: 320px;
  resize: none;
  box-shadow: 0 0 0 2px transparent;
  transition: box-shadow 0.3s;
}

.input-box input:focus,
.input-box textarea:focus {
  box-shadow: 0 0 0 2px #38bdf8;
  outline: none;
}

.contact .btn {
  background: transparent;
  color: #38bdf8;
  border: 2px solid #38bdf8;
  padding: 10px 25px;
  font-size: 1rem;
  border-radius: 25px;
  cursor: pointer;
  transition: 0.3s;
}

.contact .btn:hover {
  background: #38bdf8;
  color: #0f172a;
}

.contact .heading span {
    color: #38bdf8
    
}
